{% extends 'back/index.html.twig' %}

{% block body %}
<div class="col-md-10 col-lg-8 col-xl-7 mx-auto mb-4">
    <div class="card shadow-lg h-100">
        <div class="card-header d-flex align-items-center justify-content-between pb-0">
            <div class="card-title mb-0">
                <h4 class="m-0"><i class="bi bi-bank"></i> Détails du Compte Bancaire</h4>
                <small class="text-muted">Informations complètes sur le compte</small>
            </div>
            <div class="dropdown">
                <button class="btn btn-sm btn-outline-secondary p-0" type="button" id="accountActions" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="bx bx-dots-vertical-rounded"></i>
                </button>
                <div class="dropdown-menu dropdown-menu-end" aria-labelledby="accountActions">
                   
                    <a class="dropdown-item" href="{{ path('app_compte_bancaire_index') }}">
                        <i class="bi bi-arrow-left"></i> Retour à la liste
                    </a>
                    {{ include('compte_bancaire/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
        <div class="card-body">
            <ul class="list-group list-group-flush">
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <span><i class="bi bi-person-badge me-2 text-primary"></i><strong>Id :</strong></span>
                    <span>{{ compte_bancaire.id }}</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <span><i class="bi bi-credit-card me-2 text-success"></i><strong>Compte Bancaire :</strong></span>
                    <span>{{ compte_bancaire.compteBancaire }}</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <span><i class="bi bi-card-text me-2 text-info"></i><strong>Numéro Compte :</strong></span>
                    <span>{{ compte_bancaire.numeroCompte }}</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <span><i class="bi bi-calendar-check me-2 text-warning"></i><strong>Créé le :</strong></span>
                    <span>{{ compte_bancaire.createdAt ? compte_bancaire.createdAt|date('Y-m-d H:i:s') : '' }}</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <span><i class="bi bi-calendar-event me-2 text-danger"></i><strong>Mis à jour le :</strong></span>
                    <span>{{ compte_bancaire.updatedAt ? compte_bancaire.updatedAt|date('Y-m-d H:i:s') : '' }}</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <span><i class="bi bi-person me-2 text-secondary"></i><strong>Utilisateur :</strong></span>
                    <span>{{ compte_bancaire.user ? compte_bancaire.user.nom : 'N/A' }} {{ compte_bancaire.user ? compte_bancaire.user.prenom : 'N/A' }}</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <span><i class="bi bi-telephone me-2 text-muted"></i><strong>Numéro de téléphone :</strong></span>
                    <span>{{ compte_bancaire.user ? compte_bancaire.user.numtelephone : 'N/A' }}</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <span><i class="bi bi-currency-dollar me-2 text-success"></i><strong>Solde :</strong></span>
                    <span>{{ compte_bancaire.solde ? compte_bancaire.solde.montant : 'N/A' }}</span>
                </li>
            </ul>
        </div>
        <div class="card-footer text-end">
            <a href="{{ path('app_compte_bancaire_edit', {'id': compte_bancaire.id}) }}" class="btn btn-primary me-2">
                <i class="bi bi-pencil-square"></i> Modifier
            </a>
            <a href="{{ path('app_compte_bancaire_index') }}" class="btn btn-primary">
            <i class="bi bi-arrow-left"></i> Retour à la liste
            </a>
        </div>
    </div>
</div>
{% endblock %}
