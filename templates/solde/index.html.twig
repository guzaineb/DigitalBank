                    <li>
                      <div class="dropdown-divider"></div>
                    </li>
                    
                      
                <!--/ User -->
              </ul>
            </div>
          </nav>

          <!-- / Navbar -->

          <!-- Content wrapper -->
          <div class="content-wrapper">

    <h1 class="mb-2">Solde</h1>


    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Montant</th>
                <th scope="col" class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for solde in soldes %}
            <tr>
                <td>{{ solde.id }}</td>
                <td>{{ solde.montant | number_format(2, ',', ' ') }} €</td>
                <td class="text-center">
                    <a href="{{ path('app_solde_show', {'id': solde.id}) }}" class="btn btn-sm btn-info">Voir</a>
                    <a href="{{ path('app_solde_edit', {'id': solde.id}) }}" class="btn btn-sm btn-warning">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3" class="text-center">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="mt-3">
        <a href="{{ path('app_solde_new') }}" class="btn btn-success">Créer un nouveau solde</a>
    </div>

{% endblock %}
