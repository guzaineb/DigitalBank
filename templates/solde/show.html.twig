{% extends 'back/index.html.twig' %}



{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">Détails du Solde</h1>

    <div class="card p-4">
        <div class="card-body">
            <table class="table table-striped">
                <tbody>
                    <tr>
                        <th scope="row">Id</th>
                        <td>{{ solde.id }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Montant</th>
                        <td>{{ solde.montant }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="mt-3">
        <a href="{{ path('app_solde_index') }}" class="btn btn-primary">
            <i class="bi bi-arrow-left"></i> Retour à la liste
        </a>
        <a href="{{ path('app_solde_edit', {'id': solde.id}) }}" class="btn btn-warning ms-2">
            <i class="bi bi-pencil"></i> Editer
        </a>
    </div>

    {{ include('solde/_delete_form.html.twig') }}
</div>
{% endblock %}
